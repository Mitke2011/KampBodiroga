@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="../Content/css/reset.css" type="text/css" media="screen" />
    <link rel="stylesheet" href="../Content/css/style.css" type="text/css" media="screen" />
    <link rel="stylesheet" href="../Content/css/invalid.css" type="text/css" media="screen" />
    <title>Dejan Bodiroga camp | Sign In</title>
</head>
<body id="login">
    <div id="login-wrapper" class="png_bg">
        <div id="login-top">
            <img src="../Content/images/logo.png" alt="Logo" width="103" height="123" id="logo" />
        </div>
        <div id="login-content">
            @*@Html.BeginForm*@
            <form id="forma" name="forma" method="post">


                <p>

                    <label>Username</label>
                    <input class="text-input" type="text" name="user" id="user" />
                </p>
                <div class="clear"></div>
                <p>
                    <label>Password</label>
                    <input class="text-input" type="password" name="pass" id="pass" />
                </p>

                <div class="clear"></div>
                <p id="remember-password">
                    <input type="checkbox" />
                    Zapamti me
                </p>
                <div class="clear"></div>
                <p>
                    <input class="button" type="submit" value="Uloguj se" name="submit" />
                </p>

            </form>
        </div>
    </div>
</body>
</html>
